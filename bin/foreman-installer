#!/usr/bin/env ruby
require 'rubygems'
require 'kafo'

CONFIG_DIR = 'config/'

# Verify that this is run as root
if Process.uid != 0
  cmd_name = File.basename($0)
  puts '%s must be run as root' % cmd_name
  exit -1
end

# Run the install
@result = Kafo::KafoConfigure.run

# handle exit code when help was invoked or installer ended with '2' (success in puppet)
if @result.nil? || (!@result.config.app[:detailed_exitcodes] && @result.exit_code == 2)
  exit(0)
else
  exit(@result.exit_code)
end
